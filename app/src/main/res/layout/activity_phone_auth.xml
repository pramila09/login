<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneAuthActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="WELCOME TO PHONE AUTHENTICATION "
            android:textColor="#ffff"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:hint="Phone Number"

            android:padding="20dp" />

        <Button
            android:id="@+id/buttonGetVerificationCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstylepink"
            android:gravity="center"
            android:text="Get Verification Code"
            android:textAllCaps="false"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/editTextCode"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="Verification Code"
            android:inputType="number"
            android:padding="20dp" />
        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:textAllCaps="false"
            android:background="@drawable/buttonstylepink"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="  Resent code again "
       />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="click here"
            android:textSize="10dp"
            android:padding="10dp"
            android:visibility="visible"/>


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="263dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:paddingTop="100dp"
                android:text="A verification code will be sent to your phone number" />

        </LinearLayout>

    </LinearLayout>


